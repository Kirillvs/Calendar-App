<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :event_description %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.datetime_select :start, id: :event_start %>
  </div>

  <div class="field">
    <%= form.label :repetitive %>
    <%= form.check_box :repetitive, id: :event_repetitive %>
  </div>

  <div class="field">
    <%= form.label :repeat_period %>
    <%= form.number_field :repeat_period, id: :event_repeat_period %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
